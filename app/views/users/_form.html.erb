<%= simple_form_for @user do |f| %>
<%= f.input :email %>
<%= f.input :first_name %>
<%= f.input :last_name %>

<%= f.input :username %>
<%= f.input :password %>
<%= f.input :password_confirmation %>

<%= f.input :address_line_1 %>
<%= f.input :address_line_2 %>
<%= f.input :address_line_3 %>
<%= f.input :address_line_4 %>
<%= f.input :postcode %>

<%= f.button :submit %>

<% end %>